{
  "name": "clappr-context-menu-plugin",
  "version": "0.0.5",
  "description": "A context menu for Clappr player",
  "keywords": [
    "clappr",
    "plugin",
    "context",
    "menu"
  ],
  "homepage": "https://github.com/joaopaulovieira/clappr-context-menu-plugin",
  "bugs": {
    "url": "https://github.com/joaopaulovieira/clappr-context-menu-plugin/issues",
    "email": "vieira.joaopaulo.91@gmail.com"
  },
  "license": "BSD-3-Clause",
  "author": "Joao Paulo Vieira <vieira.joaopaulo.91@gmail.com>",
  "files": [
    "/dist",
    "/src"
  ],
  "main": "dist/clappr-context-menu-plugin.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:joaopaulovieira/clappr-context-menu-plugin.git"
  },
  "scripts": {
    "bundle-check": "ANALYZE_BUNDLE=true webpack -p",
    "build": "webpack --progress --display-modules",
    "release": "MINIMIZE=true webpack -p",
    "start": "webpack-dev-server",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect node_modules/.bin/jest --runInBand",
    "test:coverage": "open coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "@babel/core": "7.8.6",
    "@babel/preset-env": "7.8.6",
    "babel-jest": "25.1.0",
    "babel-loader": "8.0.6",
    "babel-plugin-add-module-exports": "1.0.2",
    "clappr": "0.3.12",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "eslint-plugin-jest": "23.8.2",
    "html-loader": "0.5.5",
    "jest": "25.1.0",
    "node-sass": "4.13.1",
    "sass-loader": "8.0.2",
    "webpack": "4.41.6",
    "webpack-bundle-analyzer": "3.6.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3"
  },
  "peerDependencies": {
    "clappr": "0.3.12"
  },
  "publishConfig": {
    "access": "public"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.html$": "<rootDir>/src/__mocks__/htmlMock.js"
    },
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
